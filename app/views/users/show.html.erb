<div class="container">
  
  <div class="row">
    <div class="col-md-6">
      <%if current_user.admin %>
        <h3>Welcome <%= current_user.first_name %>!</h3>
        <h5>Admin</h5>
      <%else%>
        <h3>Welcome, <%= @user.first_name %> <%= @user.last_name %>!<h3>
      <%end%>
      <img src="<%= @user.profile_pic %>" alt="user profile pic">
    </div>
    <div class="col-md-6" id="user_info">
      <ul>
          <li>Current city: <%= @user.current_city %></li>
          <li>Join date: <%= @user.created_at.localtime.strftime('%a %b %d, %Y %I:%M%p') %></li>
          <li>Age: <%= @user.age %></li>
          <li>Email: <%= @user.email %></li>
        </ul>
    </div>
  </div>

  <div class="row" id="buttons">
    <div class="col-sm-12"></div>
    <% if current_user.admin? || current_user == @user %>
    <div class="col-sm-1"><%= button_to "Edit", edit_user_path(@user), :method => :get %></div>
    <div class="col-sm-1"><%= button_to "Delete", @user, :method => :delete, data: {confirm: 'Are you sure?'}%></div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-sm-12" id="user_description">Description: <%= @user.description %></div>
  </div>

  <div class="row" id="show_information">
    <div class="col-sm-12">
      <h3>Venues</h3>
      <div>
    <% @user.venues.each do |v| %>
    <ul>
      <li><%= link_to image_tag(v.profile_pic), "/venues/#{v.id}" %></li>
      <li><%= link_to v.name, "/venues/#{v.id}" %></li>
      <li><%= v.city %></li>
    </ul>
  <% end %>
  </div>
    </div>
    </div>
  </div>
</div>