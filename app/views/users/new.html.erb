<div class="container">
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <h1>Sign Up Page</h1>

    <%= form_for @user do |f| %>
    <div class="form-group">
        <%= f.text_field :profile_pic, placeholder: "Profile Photo", class: "form-contol" %>

        <%= f.text_field :first_name, placeholder: "First Name", class: "form-contol" %>

        <%= f.text_field :last_name, placeholder: "Last Name", class: "form-contol" %>

        <%= f.text_field :age, placeholder: "Age", class: "form-contol" %>

        <%= f.text_field :email, placeholder: "Email", class: "form-contol" %>

        <%= f.password_field :password, placeholder: "Password", class: "form-contol" %>

        <%= f.text_field :current_city, placeholder: "Current City", class: "form-contol" %>

        <%= f.text_area :description, placeholder: "Description", class: "form-contol" %>

      <%= f.submit "Sign Up", class: "btn btn-danger" %>
    <% end %>
    </div>
  </div>
  </div>
</div>
