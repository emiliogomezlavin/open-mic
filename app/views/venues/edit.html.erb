<h1>Edit a Venue</h1>

<div class="row">
   <div class="col-sm-3"></div>
   <div class="col-sm-6">
      <%= form_for @venue do |form| %>
        <div class="form-group"><%= form.text_field :name, placeholder: "Venue Name", class: "form-control" %></div>
        <div class="form-group"><%= form.text_field :street_one, placeholder: "123 Street Name", class: "form-control"%></div>
        <div class="form-group"><%= form.text_field :street_two, placeholder: "Suite 123", class: "form-control"%></div>
        <div class="form-group"><%= form.text_field :city, placeholder: "San Francisco", class: "form-control"%></div>
        <div class="form-group"><%= form.text_field :state, placeholder: "California", class: "form-control"%></div>
        <div class="form-group"><%= form.text_field :zipcode, placeholder: "12345", class: "form-control"%></div>
        <div class="form-group"><%= form.text_field :phone_number, placeholder: "123-123-1234", class: "form-control"%></div>
        <div class="form-group"><%= form.text_field :email, placeholder: "Contact email", class: "form-control"%></div>
        <div class="form-group"><%= form.text_area :description, placeholder: "Cool bar", size: "24x6", class: "form-control"%></div>
        <div class="form-group"><%= form.text_field :profile_pic, placeholder: "Photo URL", class: "form-control"%></div>
        <div class="form-group"><%= form.hidden_field :full_address, placeholder: "Address", class: "form-control"%></div>
        <div class="form-group"><%= form.submit "Save!", class: "btn btn-default form-control"%></div>
      <% end %>
    </div>
   <div class="col-sm-3"></div>    

</div>

