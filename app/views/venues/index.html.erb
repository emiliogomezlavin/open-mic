<% if current_user.admin %>
<h1> Welcome, admin</h1>
<% end %>
<h1>Venues</h1>
<div>
	<%= form_tag "/venues", :method => 'get' do %>
	    <%= text_field_tag :search, params[:search]%>
	    <%= submit_tag "Search", :name => nil %>
	<% end %>
</div>
<div class="map"></div>
<div>
	<% @venues.each do |venue| %>
		<ul>
			<li><%= link_to venue.name, venue %></li>
			<li><%= venue.city %></li>
			<li><%= link_to image_tag(venue.profile_pic), venue %></li>
			<% if current_user.admin %>
		      <%= button_to "Edit", edit_venue_path(venue), :method => :get %>
		      <%= button_to "Delete", venue, :method => :delete %>
		    <% end %>
		</ul>
	<% end %>
</div>

<script type="text/javascript">
  var venues = [<%= raw @venues.to_json %>];
	allVenuesMap(venues)
</script>

