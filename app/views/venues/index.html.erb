<div class="container">
  
  <div class="row">
    <div class="col-lg-12" id="map"></div>
  </div>

    <div class="row" id="venues">

      <div class="col-lg-6" id="header-search" >
        <h1>Venues</h1>
      </div>

      <div class="col-lg-6">
        <%= form_tag search_venues_path, method: :get do %>
        <p>
        <%= text_field_tag :q, @query%>
        <%= submit_tag "Search", :name => nil %>
        <p>
        <% end %>
      </div>

    </div>

    <div class="row">
      <% @venues.each do |venue| %>
        <div class="col-md-6">
          <ul>
            <li><%= link_to image_tag(venue.profile_pic), venue %></li>
            <li><%= venue.name %></li>
            <li><%= venue.city %></li>
            <% if current_user.admin %>
              <%= button_to "Edit", edit_venue_path(venue), method: :get %>
              <%= button_to "Delete", venue, :method => :delete, data: {confirm: 'Are you sure?'} %>
            <% end %>
          </ul>
        </div>
      <% end %>
  </div>

</div>
<script type="text/javascript">
  var venues = [<%= raw @venues.to_json %>];
	allVenuesMap(venues)
</script>
