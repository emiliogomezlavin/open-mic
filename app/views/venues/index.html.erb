<div class="col-lg-12" id="mapAllVenues"></div>
<div class="container">

    <div class="row" id="venues">

      <div class="col-lg-4" id="header-search" >
        <%= button_to "Add New Venue", new_venue_path, :method => :get, class: "btn btn-info" %>
      </div>

      <div class="col-lg-4"></div>
      <div class="col-lg-4">
        <div class="row">
          <%= form_tag search_venues_path, :method => 'get' do %>
          <div class="form-group col-sm-8"><%= text_field_tag :q, @query, class: "form-control" %></div>
          <div class="form-group col-sm-4"><%= submit_tag "Search", :name => nil, class: "form-control" %></div>
          <% end %>
        </div>

      </div>

    </div>

    <div>
      <h1>Venues</h1>
    </div>
    <div class="line"></div>
    <div class="row">
      <% @venues.each do |venue| %>
        <div class="col-md-6">

          <div class="row">
            <div class="col-md-7">
              <a href='/venues/<%= venue.id %>'><img src="<%= venue.profile_pic %>" class="indexVenueImg" ></a>
            </div>
            <div class="col-md-5">
              <ul>
                <li class="venueName"><%= link_to venue.name, venue %></li>
                <li class="venueCity"><%= venue.city %></li>
                <% if current_user.admin %>
                  <div class="row">
                    <div class="col-sm-6">
                      <%= button_to "Edit", edit_venue_path(venue), :method => :get, class: "btn" %>
                    </div>
                    <div class="col-sm-6">
                      <%= button_to "Delete", venue, :method => :delete, class: "btn", data: {confirm: 'Are you sure?'} %>
                    </div>
                  </div>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>

</div>
<script type="text/javascript">
  var venues = [<%= raw @venues.to_json %>];
	allVenuesMap(venues)
</script>
