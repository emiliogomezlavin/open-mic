<h3>Comments</h3>
<hr>
<div>
  <p>Post Comment:</p>

  <%= form_for [@venue, Comment.new] do |form| %>
    <div class="form-group"><%= form.text_area :comment, class: "form-control" %> </div>
    <div class="form-group"><%= form.submit "Post", class: "btn btn-default form-control"%></div>
  <% end %>

<div class="comments">
  <% @comments.each do |c| %>
    <hr>
    <big><p><%= c.comment %></p></big>
    <h5>-<%= c.user.first_name %></h5>
    <h6 class="media-heading"><i class="fa fa-clock-o"></i> <%= c.created_at.localtime.strftime('%I:%M%p %a %b %d, %Y') %></h6>
    
    <% if current_user.admin %>
          <%= button_to "Edit", "/venues/:venue_id/comments/:id/edit", :method => :get %>
          <%= button_to "Delete", "/venues/#{c.venue.id}/comments/#{c.id}", :method => :delete %>
        <% end %>
  <% end %>
</div>

<br>
<h3>Followers</h3>
<hr>
<% @venue.users.each do |u| %>
<ul>
  <li><%= link_to u.first_name, "/users/#{u.id}"  %></li>
  <li><%= link_to image_tag(u.profile_pic), "/users/#{u.id}" %></li>
<% end %>


<div class="container">
  <div class="row">
    <div class="col s9">
      <div id="map"></div>
    </div>
  </div>
</div>


